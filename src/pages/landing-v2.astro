---
import Layout from '../layouts/Layout.astro';
import InstructorCard from '../components/InstructorCard.astro';
import { instructors, weekProgram } from '../data/content.js';
---

<Layout title="Ready to Rebound | Career Bootcamp">
  <!-- Hero Section - Modern & Bold -->
  <section class="bg-gradient-to-br from-charcoal via-charcoal to-dark-blue text-white py-24">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-stretch max-w-6xl mx-auto">
        <div class="order-2 md:order-1 flex items-center justify-center">
          <div class="relative bg-gradient-to-br from-mint to-mint/50 p-1 rounded-2xl overflow-hidden shadow-2xl w-full">
            <div class="w-full aspect-video rounded-xl overflow-hidden bg-gray-200">
              <img 
                src="/images/hero-image1.jpg" 
                alt="Professional woman with plant" 
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
        
        <div class="order-1 md:order-2">
          <div class="mb-6">
            <span class="text-mint text-sm font-bold tracking-widest uppercase px-4 py-2 bg-mint bg-opacity-10 rounded-full inline-block">
              4-Week Intensive Bootcamp
            </span>
          </div>
          
          <h1 class="font-heading text-5xl md:text-6xl font-bold mb-6 leading-tight">
            Land Your Next Role in 4 Weeks
          </h1>
          
          <p class="text-xl text-gray-300 mb-6 font-semibold">
            Master the strategies top professionals use to get hired—fast.
          </p>
          
          <p class="text-lg text-gray-400 mb-10 leading-relaxed">
            In just 4 weeks, you'll transform your resume, master LinkedIn, build your network, and position yourself as the obvious choice. 100% virtual. Expert-led. Results-driven.
          </p>
        
          <a 
            href="/signup" 
            class="inline-block bg-mint text-charcoal font-bold text-lg px-12 py-4 rounded-lg hover:bg-opacity-90 transition-all hover:scale-105 shadow-lg mb-8"
          >
            Enroll Now - $97
          </a>
        
          <p class="text-gray-400 text-sm">
            100% Virtual &nbsp;&nbsp;|&nbsp;&nbsp; Expert-Led &nbsp;&nbsp;|&nbsp;&nbsp; 60-Day Replay Access
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What You'll Learn -->
  <section class="bg-gray-50 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="font-heading text-4xl font-bold text-center text-gray-900 mb-16">
          What You'll Learn
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          {weekProgram.map(week => (
            <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl p-8 shadow-md hover:shadow-lg transition-shadow border-l-4 border-mint">
              <div class="flex items-start gap-4 mb-4">
                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-mint text-charcoal font-heading font-bold text-xl flex-shrink-0">
                  {week.week}
                </div>
                <div>
                  <h3 class="font-heading text-2xl font-bold text-gray-900">
                    {week.title}
                  </h3>
                </div>
              </div>
              <p class="text-lg font-semibold text-gray-800 mb-3">
                {week.subtitle}
              </p>
              <p class="text-base text-gray-700 mb-6">
                {week.description}
              </p>
              <ul class="space-y-3">
                {week.points.map(point => (
                  <li class="flex items-start gap-3">
                    <span class="text-charcoal font-bold text-lg mt-0.5 flex-shrink-0">→</span>
                    <span class="text-base text-gray-700">{point}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Instructors -->
  <section class="bg-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <h2 class="font-heading text-4xl font-bold text-center text-gray-900 mb-4">
          Learn From Experts
        </h2>
        <p class="text-center text-gray-600 mb-16 text-lg max-w-3xl mx-auto">
          Our instructors bring real-world experience and proven strategies to help you succeed.
        </p>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {instructors.map(instructor => (
            <InstructorCard {...instructor} />
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Why This Works -->
  <section class="bg-gray-50 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="font-heading text-4xl font-bold text-center text-gray-900 mb-16">
          Why Ready to Rebound Works
        </h2>
        
        <div class="space-y-8">
          <div class="bg-white rounded-lg p-8 shadow-sm border-l-4 border-mint">
            <h3 class="font-heading text-2xl font-bold text-gray-900 mb-3">Practical, Not Theoretical</h3>
            <p class="text-gray-700 text-lg">
              Every session includes templates, frameworks, and strategies you can use immediately. No fluff—just actionable advice from people who've been in your shoes.
            </p>
          </div>
          
          <div class="bg-white rounded-lg p-8 shadow-sm border-l-4 border-mint">
            <h3 class="font-heading text-2xl font-bold text-gray-900 mb-3">Flexible & Accessible</h3>
            <p class="text-gray-700 text-lg">
              100% virtual training. Can't make a live session? No problem. You get 60 days of replay access so you can learn at your own pace.
            </p>
          </div>
          
          <div class="bg-white rounded-lg p-8 shadow-sm border-l-4 border-mint">
            <h3 class="font-heading text-2xl font-bold text-gray-900 mb-3">Comprehensive Curriculum</h3>
            <p class="text-gray-700 text-lg">
              We cover everything: resumes, LinkedIn, networking, skill mapping, and professional messaging. Plus a bonus workshop on communication strategies that actually work.
            </p>
          </div>
          
          <div class="bg-white rounded-lg p-8 shadow-sm border-l-4 border-mint">
            <h3 class="font-heading text-2xl font-bold text-gray-900 mb-3">Expert Instructors</h3>
            <p class="text-gray-700 text-lg">
              Learn from career coaches, resume writers, LinkedIn strategists, and communication experts who've helped thousands navigate transitions successfully.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-charcoal text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-heading text-4xl font-bold mb-6">
          Ready to Take Control of Your Career?
        </h2>
        <p class="text-xl text-gray-300 mb-12">
          Join Ready to Rebound and get the strategies, tools, and confidence you need to land your next role.
        </p>
        
        <a 
          href="/signup" 
          class="inline-block bg-charcoal text-mint font-bold text-xl px-12 py-5 rounded-lg border-2 border-mint hover:bg-mint hover:text-charcoal transition-all hover:scale-105 shadow-lg mb-12"
        >
          Enroll Now - $97
        </a>
        
        <p class="text-gray-400 tracking-wide">
          100% Virtual &nbsp;&nbsp;|&nbsp;&nbsp; Expert-Led &nbsp;&nbsp;|&nbsp;&nbsp; 60-Day Replay Access
        </p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-gray-400 py-8">
    <div class="container mx-auto px-4">
      <div class="text-center">
        <p class="text-sm">
          © 2026 Ready to Rebound. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</Layout>
