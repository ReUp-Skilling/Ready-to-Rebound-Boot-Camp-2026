---
const { name, title, bio, image, linkedin, website, email, events, currentRole } = Astro.props;

// Split bio into paragraphs
const bioParagraphs = bio.split('\n\n');
---

<div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow">
  <div class="relative bg-gradient-to-br from-mint to-mint/50 p-1 rounded-2xl overflow-hidden">
    <div class="w-full aspect-square rounded-xl overflow-hidden bg-gray-200">
      <img 
        src={image} 
        alt={name}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  </div>
  
  <div class="p-6">
    <h3 class="text-2xl font-bold text-gray-900 mb-2">{name}</h3>
    <p class="text-base font-medium text-gray-600 mb-4">{title}</p>
    
    <div class="space-y-3 mb-6">
      {bioParagraphs.map(paragraph => (
        <p class="text-base text-gray-700 leading-relaxed">{paragraph}</p>
      ))}
    </div>

    {currentRole && (
      <p class="text-base font-semibold text-gray-800 mb-3">
        <strong>Current Role:</strong> {currentRole}
      </p>
    )}

    {events && (
      <p class="text-base text-gray-700 mb-3">
        <strong>Events:</strong> {events}
      </p>
    )}

    <div class="flex flex-wrap gap-3 pt-4 border-t border-gray-200">
      {website && (
        <a 
          href={website} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-base font-medium text-charcoal hover:bg-mint hover:text-charcoal px-3 py-1 rounded transition-colors underline"
        >
          Website
        </a>
      )}
      {email && (
        <a 
          href={`mailto:${email}`}
          class="text-base font-medium text-charcoal hover:bg-mint hover:text-charcoal px-3 py-1 rounded transition-colors underline"
        >
          Email
        </a>
      )}
      {linkedin && (
        <a 
          href={linkedin} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-base font-medium text-charcoal hover:bg-mint hover:text-charcoal px-3 py-1 rounded transition-colors underline"
        >
          LinkedIn Profile
        </a>
      )}
    </div>
  </div>
</div>
