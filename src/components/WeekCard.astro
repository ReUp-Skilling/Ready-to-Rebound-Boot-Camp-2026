---
const { title, subtitle, description, points, week } = Astro.props;
---

<div class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
  <div class="mb-4">
    <div class="text-sm font-semibold text-gray-500 mb-1">Week {week}</div>
    <h3 class="font-heading text-2xl font-bold text-gray-900 mb-3">{title}</h3>
    <p class="text-lg font-semibold text-gray-800 mb-3">{subtitle}</p>
    <p class="text-base text-gray-700 mb-5">{description}</p>
  </div>
  <ul class="space-y-3">
    {points.map(point => (
      <li class="flex items-start gap-3">
        <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span class="text-base text-gray-700">{point}</span>
      </li>
    ))}
  </ul>
</div>
